<div class="row" style="background-color: aqua;display:flex;flex-grow: 1;justify-content: center;align-items: stretch;">
  <div class="border" style="justify-content: center;align-items: center;display: flex;flex-direction: column;">
    <h2>Signup</h2>
  <div class="signup">  

    <form class="form signup-form" style="background-color: bisque; padding:0.5rem;text-align:end;">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn-access btn btn-primary" style="text-align: center;" type="submit">Sign Up!</button>
      </div>
       <a href="/login">Login instead</a>
    </form>
  </div>
  </div>
</div>
<script src="./js/signup.js"></script>
