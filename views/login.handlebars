<div class="row" style="background-color: aqua;display:flex;flex-grow: 1;justify-content: center;align-items: stretch;">
<div class="login-border" style="justify-content: center;align-items: center;display: flex;flex-direction: column;">
  <h2>Login</h2>
<div class="login">
    <form class="form login-form" style="background-color: bisque; padding:0.5rem;text-align:end;">
      <div class="form-group">
        <label for="username-login" >Username</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input class="form-input" style="" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" style="text-align: center;" type="submit">Login!</button>
      </div>
      <a class="btn" href="/sign-up">Sign Up instead</a>
    </form>
  </div>
  </div>  
</div>
<script src="./js/login.js"></script>
<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>
</div>
