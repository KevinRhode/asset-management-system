<div class="row">
<div class="login-border">
  <h2>Login</h2>
<div class="login">
    

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Username</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn-access btn btn-primary" type="submit">Login!</button>
      </div>
      <a href="/sign-up">Sign Up instead</a>
    </form>
  </div>
  </div>  
</div>

<script src="/js/login.js"></script>
