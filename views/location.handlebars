<div class="row mac" style="display:flex;flex-grow: 1;justify-content: center;align-items: stretch;">
<div class="border">
  <h2>Location</h2>
<div class="location" id="location" {{#if location}}
          data-id="{{location.id}}"
        {{else}}
          
        {{/if}} >
    <form class="form location-form">
      <div class="form-group">
        <label for="location-description">Location Name</label>
        <input class="form-input" type="text" id="location-description"
        {{#if location}}
          value="{{location.description}}"
        {{else}}
          
        {{/if}}
         />
      </div>
      <div class="form-group">
        {{#if location}}
          <button class="btn btn-primary edit-handle" data-id="{{location.id}}" type="click">Update</button>
          <button class="btn btn-primary delete-handle" data-id="{{location.id}}" type="click">Delete</button>
        {{else}}
          <button class="btn btn-primary create-handle" type="submit">Create!</button>
        {{/if}}
      </div>
    </form>
  </div>
  </div>  
</div>

<div style="flex-grow: 0.35;">
  {{> vert-nav}}
</div>

<script src="/js/location.js"></script>
